# coding: utf8

table = db.define_table

table('post',
    Field('title','string'),
    Field('body','text'),
    auth.signature,
    Field('link','string',requires=IS_URL()),
    Field('shorturl','string',length=6,requires=IS_URL()),
    Field('comments_url','string',requires=IS_URL()),
    format='%(title)s'
    )
